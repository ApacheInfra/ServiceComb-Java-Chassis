<configuration status="error" monitorInterval="300">
  <Properties>
    <Property name="maxFileSize">10MB</Property>
    <Property name="maxFileCount">10</Property>
    <Property name="filePath">./samples/bmi/calculator/target/metric</Property>
    <Property name="filePrefix">bmi.calculator</Property>
  </Properties>

  <Appenders>
    <RollingFile name="servicecomb.instance.producer.waitInQueue.count" fileName="${filePath}${filePrefix}.servicecomb.instance.producer.waitInQueue.count.dat"
      filePattern="${filePath}${filePrefix}.servicecomb.instance.producer.waitInQueue.count-%i.dat">
      <PatternLayout pattern="%m%n"/>
      <SizeBasedTriggeringPolicy size="${maxFileSize}"/>
      <DefaultRolloverStrategy max="${maxFileCount}"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="servicecomb.instance.producer.waitInQueue.count" level="error" additivity="false">
      <AppenderRef ref="servicecomb.instance.producer.waitInQueue.count"/>
    </Logger>
  </Loggers>
</configuration>